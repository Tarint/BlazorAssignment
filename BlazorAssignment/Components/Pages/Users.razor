@page "/users"
@rendermode InteractiveServer

<PageTitle>Users</PageTitle>

<h1>@Heading</h1>

@if (_users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button @onclick="DisplayAllUsers">Show All</button>
    <button @onclick="DisplaySomeUsers">Show Some</button>

    <button @onclick="OrderByName">Filter By Name</button>
    <button @onclick="OrderByID">Filter By ID</button>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>

                <th>Street</th>
                <th>City</th>
                <th>Zipcode</th>

                <th>Company Name</th>
                <th>Company Catchphrase</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _users)
            {
                <tr>
                    <td>@item.ID.ToString()</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber.ToString()</td>

                    <td>@item.Street</td>
                    <td>@item.City</td>
                    <td>@item.Zipcode.ToString()</td>

                    <td>@item.CompanyName</td>
                    <td>@item.CompanyCatchphrase</td>
                </tr>
            }
        </tbody>
    </table>
}


